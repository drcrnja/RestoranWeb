@model Restoran.web.Models.Rezervacija

@{
    ViewData["Title"] = "Izmena rezervacije";
}

<style>
    option:disabled {
        color: red;
        background-color: #fdd;
    }
</style>

<h2>Izmena rezervacije</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-2">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@err.ErrorMessage</div>
        }
    </div>
}

<form asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IDRezervacije" />

    <div class="form-group">
        <label>Datum</label>
        <input name="Datum" type="date" class="form-control"
               value="@Model.Datum.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label>Vreme</label>
        <input name="Vreme" type="time" class="form-control"
               value="@Model.Vreme.ToString(@"hh\:mm")" />
    </div>

    <div class="form-group">
        <label>Broj osoba</label>
        <input name="BrojOsoba" class="form-control"
               value="@Model.BrojOsoba" />
    </div>

    <div class="form-group">
        <label>Ime gosta</label>
        <input name="ImeGosta" class="form-control"
               value="@Model.Gost?.ImeGosta" />
    </div>

    <div class="form-group">
        <label>Prezime gosta</label>
        <input name="PrezimeGosta" class="form-control"
               value="@Model.Gost?.PrezimeGosta" />
    </div>

    <div class="form-group">
        <label>Sto</label>
        <select asp-for="IDStola" class="form-control"
                asp-items="ViewBag.Stolovi"></select>
    </div>

    <button type="submit" class="btn btn-primary">Sačuvaj</button>
</form>

<a asp-action="Index">Nazad na listu</a>

<script>
    function osveziStoloveEdit() {
        const datum = document.querySelector('input[name="Datum"]').value;
        const id = @Model.IDRezervacije;
        if (!datum) return;

        fetch(`/Rezervacija/OsveziStoloveEdit?datum=${datum}&id=${id}`)
            .then(r => r.text())
            .then(html => {
                const sel = document.querySelector('select[name="IDStola"]');
                sel.innerHTML = html;   // _StoloviPartialEdit
            });
    }
    document.addEventListener('DOMContentLoaded', osveziStoloveEdit);
    document.querySelector('input[name="Datum"]').addEventListener('change', osveziStoloveEdit);
</script>