@model Restoran.web.Models.Rezervacija

@{
    ViewData["Title"] = "Nova rezervacija";
}

<h2>Nova rezervacija</h2>

<style>
    input[type="date"]:invalid::-webkit-datetime-edit {
        color: transparent;
    }

    input[type="date"]:focus::-webkit-datetime-edit {
        color: black;
    }
</style>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-2">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@err.ErrorMessage</div>
        }
    </div>
}

<form asp-action="Create">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Ime gosta</label>
        <input name="ImeGosta" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Prezime gosta</label>
        <input name="PrezimeGosta" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Datum</label>
        <input name="Datum" type="date" class="form-control"
               value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label>Vreme</label>
        <input type="time" name="Vreme" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Broj osoba</label>
        <input type="number" name="BrojOsoba" class="form-control" min="1" required />
    </div>

    <div class="form-group">
        <label>Sto</label>
        <select name="IDStola" class="form-control" required>
            <option value="">-- izaberi sto --</option>
            @foreach (var s in ViewBag.Stolovi)
            {
                <option value="@s.IDStola" style="@(s.Zauzet ? "color:red" : "color:green")">
                    Sto @s.Broj
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Sačuvaj</button>
</form>

<a asp-action="Index">Nazad na listu</a>

<script>
    function osveziStolove() {
        const datum = document.querySelector('input[name="Datum"]').value;
        if (!datum) return;
        fetch(`/Rezervacija/OsveziStolove?datum=${datum}`)
            .then(r => r.text())
            .then(html => {
                const sel = document.querySelector('select[name="IDStola"]');
                sel.innerHTML = html;
            });
    }
    document.addEventListener('DOMContentLoaded', osveziStolove);
    document.querySelector('input[name="Datum"]').addEventListener('change', osveziStolove);
</script>